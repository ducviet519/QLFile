@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model WebTools.Models.ReportListViewModel

@{
    ViewData["Title"] = "Quản lý biểu mẫu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12 text-center">
                <h1>Danh sách biểu mẫu</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                @{
                    if (TempData["SuccessMsg"] != null)
                    {
                        <script type="text/javascript">
                                window.onload = function () { toastr["success"]('@TempData["SuccessMsg"]');}
                        </script>

                    }
                    if (TempData["ErrorMsg"] != null)
                    {
                        <script type="text/javascript">
                                window.onload = function () { toastr["error"]('@TempData["ErrorMsg"]');}
                        </script>
                    }
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <!--Tìm kiếm -->
                        <form asp-action="Index" asp-controller="Report" id="searchForm" method="post">
                            <div class="row align-items-end">
                                <div class="col-3">
                                    <div class="form-group row m-0">
                                        <label class="col-12">Tên/Mã biểu mẫu:</label>
                                        <input type="text" class="form-control col" name="SearchString" id="SearchString" />
                                        <select id="search" class="form-control col-2">
                                            <option value="1" selected>Theo tên</option>
                                            <option value="2">Theo nội dung</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-auto pl-2">
                                    <label>Ngày ban hành:</label>
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <input type="text" id="SearchDate" name="SearchDate" class="form-control datetimepicker-input SearchDate" data-toggle="datetimepicker" data-target="#SearchDate" autocomplete="off" />
                                    </div>
                                </div>
                                <div class="col-auto pl-2">
                                    <label>Trạng thái:</label>
                                    <select id="SearchTrangThaiSD" class="form-control col-auto">
                                        <option value="" selected>Tất cả</option>
                                        <option value="Đang sử dụng">Đang sử dụng</option>
                                        <option value="Chưa ban hành">Chưa ban hành</option>
                                        <option value="Đã hủy">Đã hủy</option>
                                    </select>
                                </div>
                                <div class="col-auto pl-2">
                                    <select id="SearchTrangThaiPM" class="form-control col-auto">
                                        <option value="" selected>Tất cả</option>
                                        <option value="Đã hoàn thành">Đã hoàn thành</option>
                                        <option value="Chưa hoàn thành">Chưa hoàn thành</option>
                                        <option value="Chưa có">Chưa có</option>
                                    </select>
                                </div>
                                <div class="col-2 pl-2">
                                    <label>URD (Quy trình vận hành):</label>
                                    <div class="col">
                                        <select class="form-control selectURD2" multiple="multiple" data-placeholder="Chọn" style="width: 100%;" asp-items="@Model.URDs" name="SearchURD" id="SearchURD"></select>
                                        <input type="hidden" id="txtURD" name="txtURD" />
                                    </div>
                                </div>
                                <div class="col-auto"><button type="button" class="btn btn-primary" id="btnSearch">Tìm kiếm</button></div>

                                @*@if (User.IsInRole("Editer") || User.IsInRole("Manager") || User.IsInRole("Admin"))*@
                                @if ((AuthorizationService.AuthorizeAsync(User, "Permission.Reports.Add")).Result.Succeeded)
                                {

                                    <div class="col-auto"><button type="button" class="btn btn-success" data-toggle="ajax-modal" data-target="#addReport" data-url="@Url.Action("AddReport")">Thêm biểu mẫu</button></div>
                                }
                            </div>
                        </form>
                    </div>
                    <div class="card-body">
                        <div id="ReportPopup"></div>
                        <!--Bảng biểu mẫu -->
                        <div class="dataTables_wrapper dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered table-striped dataTable dtr-inline" role="grid" id="tableReport">
                                        <thead class="thead">
                                            <tr>
                                                <th class="nowrap">STT</th>
                                                <th class="nowrap">Tên biểu mẫu</th>
                                                <th class="nowrap">Mã biểu mẫu</th>
                                                <th class="nowrap">Phiên bản</th>
                                                <th class="nowrap">Ngày phát hành</th>
                                                <th class="nowrap">Trạng thái</th>
                                                <th class="nowrap">Phần mềm</th>
                                                <th class="nowrap">Trạng thái phần mềm</th>
                                                <th class="nowrap"></th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="ReportPopup"></div>
</section>

@section Scripts{
    <script type="text/javascript">

        $(function () {
            $('#SearchDate').datetimepicker({ format: 'DD/MM/YYYY', locale: 'vi' });
        });

        $(function () {
            var string = $('#txtURD').val();
            var array = string.split(",").map(Number);
            //Dropdown
            $('.selectURD2').select2()
            $('#SearchURD').val(array);
            $('#SearchURD').trigger('change');
        });

        $(function () {
            var columnData = [
                { "data": "stt" },
                { "data": "tenBM" },
                { "data": "maBM" },
                { "data": "phienBan" },
                { "data": "ngayBanHanh" },
                { "data": "trangThai" },
                { "data": "phanMem" },
                { "data": "trangThaiPM" },
                {
                    "data": { idBieuMau: "idBieuMau", idPhienBan: "idPhienBan", fileLink: "fileLink" },
                    "render": function (data, row) {
                        if (data.fileLink == "") {
                            var file = "<a href='#' target='_blank' class='btn btn-link'>&nbsp; &nbsp; &nbsp; &nbsp;</a>";
                        }
                        else {
                            var file = "<a class='btn btn-link' data-toggle='ajax-modal' data-target='#documentView-" + data.idPhienBan + "' data-url='/Report/PopUpDocumentView?link=" + data.idPhienBan + "'>File</a>";
                        }

                        if (true) {
                            var version = "<a class='dropdown-item' data-toggle='ajax-modal' data-target='#reportVersion-" + data.idBieuMau + "' data-url='/Report/Version?id=" + data.idBieuMau + "'>Phiên bản</a>";
                        }
                        else { var version = ""; }
                        if (true) {
                            var software = "<a class='dropdown-item' data-toggle='ajax-modal' data-target='#reportSoft-" + data.idBieuMau + "' data-url='/Report/Soft?id=" + data.idBieuMau + "'>Phần mềm</a>";
                        } else { var software = ""; }
                        if (true) {
                            var detail = "<a class='dropdown-item' data-toggle='ajax-modal' data-target='#reportDetail-" + data.idBieuMau + "' data-url='/Report/Detail?id=" + data.idBieuMau + "'>Chi tiết</a>";
                        } else { var detail = ""; }
                        if ('@User.IsInRole("Editer")' == 'True' || '@User.IsInRole("Manager")' == 'True' || '@User.IsInRole("Admin")' == 'True') {
                            var edit = "<a class='dropdown-item' data-toggle='ajax-modal' data-target='#reportEdit-" + data.idBieuMau + "' data-url='/Report/EditReport?id=" + data.idBieuMau + "'>Sửa biểu mẫu</a>";
                        } else { var edit = ""; }

                        var dropmenu = "<button type='button' class='btn btn-link dropdown-toggle' data-toggle='dropdown'>Chi tiết</button ><div class='dropdown-menu' role='menu'>" + version + " " + software + " " + detail + " " + edit + "</div>";
                        var result = "<div class='btn-group'>" + file + " " + dropmenu + "</div>";
                        return result;
                    }
                },
            ]
            searchDataTableWithInput("#tableReport", columnData, "/Report/SearchReportList/", 10, "0", 8);

            $('#btnSearch').on('click', function () {
                var loai = $("#search").val() || "";
                var searchString = ((document.getElementById("SearchString") || {}).value) || "";
                var searchDate = ((document.getElementById("SearchDate") || {}).value) || "";
                var searchTrangThaiSD = $("#SearchTrangThaiSD").val() || "";
                var searchTrangThaiPM = $("#SearchTrangThaiPM").val() || "";
                var searchURD = $("#SearchURD").val() || "";

                var searchTerm = "loai=" + loai;
                if ($.trim(searchString) != "")
                    searchTerm += "&searchString=" + encodeURIComponent($.trim(searchString));
                if (searchDate != "")
                    searchTerm += "&searchDate=" + searchDate;
                if (searchTrangThaiSD != "")
                    searchTerm += "&searchTrangThaiSD=" + searchTrangThaiSD;
                if (searchTrangThaiPM != "")
                    searchTerm += "&searchTrangThaiPM=" + searchTrangThaiPM;
                if (searchURD != "")
                    searchTerm += "&searchURD=" + searchURD;

                searchDataTableWithInput("#tableReport", columnData, "/Report/SearchReportList?" + searchTerm, 10, "0", 8);
                               
            });
        });

        $(document).ready(function () {
            $('body').on('click', 'a[data-toggle="ajax-modal"]', function (event) {
                var url = $(this).data('url');
                $(this).callModal(url);
            });
            $('body').on('click', 'button[data-toggle="ajax-modal"]', function (event) {
                var url = $(this).data('url');
                $(this).callModal(url);
            });
        });
    </script>
}



