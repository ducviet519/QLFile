@model WebTools.Models.RoleControllerActionViewModel
@{
    Layout = null;
}

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editRolesLabel" aria-hidden="true" id="RolesPopup">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa thông tin Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;&nbsp;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Permission" asp-action="EditController" id="controllerForm">
                    @Html.AntiForgeryToken()
                    <div class="row form-group" hidden>
                        <div class="col-2"><label for="ControllerID">ID:</label></div>
                        <div class="col">
                            <input type="text" class="form-control" name="ControllerID" id="ControllerID" value="@Model.Controllers.ControllerID" readonly />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-2"><label for="RoleName">Controller:</label></div>
                        <div class="col"><input type="text" class="form-control" name="ControllerName" id="ControllerName" value="@Model.Controllers.ControllerName" required /></div>
                    </div>
                    <div class="row form-group">
                        <div class="col-2"><label for="Description">Mô tả:</label></div>
                        <div class="col"><textarea rows="4" class="form-control" name="Description" id="Description">@Model.Controllers.Description</textarea></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary" data-save="modalFile">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>