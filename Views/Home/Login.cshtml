<!DOCTYPE html>
<html class=" -webkit-">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>Đăng nhập hệ thống</title>
    <link rel="stylesheet" href="/css/login.css">
    <script type="text/javascript" src="/js/prefixfree.min.js"></script>
</head>
<body style="">
    <div class="body"></div>
    <div class="grad"></div>
    <div class="header">
        <img src="/logo_300x300.png" width="250">
    </div>
    <br>
    <div class="login">
        <form action="/Home/login" id="loginForm" method="post">
            <input type="hidden" name="ReturnUrl" value=""/>
            <input id="Domain" name="Domain" type="hidden" value="bvta.vn" />
            <input type="text" id="UserName" name="UserName" placeholder="Tài khoản" required />
            <input type="password" id="Password" name="Password" required />
            <label id="mess" class="clearfix" style="display: block; line-height: 20px; margin-top: 5px;"></label>
            <input type="submit" value="Đăng nhập">
        </form>
    </div>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#loginForm').on('submit', function (event) {
                var $form = $(this);

                $.ajax({
                    type: $form.attr('method'),
                    url: $form.attr('action'),
                    data: $form.serialize(),
                    success: function (data, status) {
                        var returnUrl = $("input[name=\"ReturnUrl\"]").val();

                        if (data.result == true) {
                            if (returnUrl == '') {
                                window.location.assign(data.url);
                            } else {
                                window.location.assign(returnUrl);
                            }

                        }
                        else {
                            $("#mess").html("Tên đăng nhập hoặc Mật khẩu không đúng.");
                        }

                    },
                    error: function (er) {
                        alert(er);
                    }
                });

                event.preventDefault();
            });
        });
    </script>

</body>
</html>